%tr
  %td.description
    - unless @price_lock || purchase_lock
      = link_to(image_tag("remove.png"), { :action => :order_item_remove, :id => order_item_entry.id, :klass => 'OrderItemEntry' }, :remote => true, :class => 'remove')
    = text_field_tag "#{order_item_entry.class}-#{order_item_entry.id}-description", order_item_entry.description, :size => 32, :readonly => @price_lock || purchase_lock, 'data-autocomplete' => autocomplete_order_item_entry_description_admin_order_path(@order)
  = render :partial => 'order_item_entry_tail', :locals => { :object => order_item_entry, :purchase_lock => purchase_lock, :null => true }
